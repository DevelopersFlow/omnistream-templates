{
  "scripts": [
    {
      "key": "lint:es",
      "value": "eslint --ext .ts"
    },
    {
      "key": "lint:ts",
      "value": "tsc --noEmit"
    },
    {
      "key": "dev",
      "value": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --no-notify --ignore-watch ./node_modules ./src/server.ts"
    },
    {
      "key": "debug",
      "value": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --inspect --no-notify --ignore-watch ./node_modules ./src/server.ts"
    },
    {
      "key": "start",
      "value": "node ./dist/server.js"
    },
    {
      "key": "build",
      "value": "rimraf ./dist && babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored"
    },
    {
      "key": "typeorm",
      "value": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
    },
    {
      "key": "seed",
      "value": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js seed"
    },
    {
      "key": "db:recreate",
      "value": "yarn typeorm schema:drop && yarn typeorm migration:run && yarn seed && clear"
    }
  ],
  "dependencies": [
    "aws-sdk",
    "class-transformer",
    "cors",
    "date-fns@next",
    "dotenv",
    "express",
    "express-async-errors",
    "express-validation",
    "handlebars",
    "multer",
    "mysql2",
    "nodemailer",
    "redis@^4.5.1",
    "reflect-metadata",
    "socket.io",
    "tsyringe",
    "typeorm@^0.2.25",
    "typeorm-seeding@^1.6.1",
    "uuid"
  ],
  "devDependencies": [
    "@babel/cli",
    "@babel/core",
    "@babel/node",
    "@babel/plugin-proposal-class-properties",
    "@babel/plugin-proposal-decorators",
    "@babel/plugin-proposal-private-methods",
    "@babel/plugin-proposal-private-property-in-object",
    "@babel/preset-env",
    "@babel/preset-typescript",
    "@types/cors",
    "@types/express",
    "@types/multer",
    "@types/mysql",
    "@types/node",
    "@types/nodemailer",
    "@types/uuid",
    "@typescript-eslint/eslint-plugin@^5.45.0",
    "@typescript-eslint/parser@^5.45.0",
    "babel-plugin-module-resolver",
    "babel-plugin-transform-typescript-metadata",
    "eslint@\"^7.32.0 || ^8.2.0\"",
    "eslint-config-airbnb-base@^15.0.0",
    "eslint-config-prettier",
    "eslint-import-resolver-typescript",
    "eslint-plugin-import@^2.25.2",
    "eslint-plugin-import-helpers",
    "eslint-plugin-prettier",
    "eslint-plugin-unused-imports",
    "prettier",
    "rimraf",
    "ts-node-dev",
    "tsconfig-paths",
    "typescript"
  ]
}
